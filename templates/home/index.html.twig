{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid h-100 bg-dark text-white">
        <div class="row h-100">
            <div class="col-lg-4 d-flex justify-content-center align-items-center h-100">
                <div class="p-3 border border-white rounded">
                    <p>Identifiant universitaire:</p>
                    {{ form_start(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
            <div class="col-lg-8 d-flex justify-content-center align-items-center h-100">
                {% if notes is defined %}
                    <table class="table table-dark table-striped table-hover">
                        <thead>
                        <tr>
                            <th>Domain</th>
                            <th>Total</th>
                            <th>Validated</th>
                            <th>Not validated</th>
                            <th>Percentage</th>
                        </tr>
                        </thead>
                        {% for domain,data in notes %}
                            <tr class="{{ data['percent'] <= 30 ? "text-danger" : (data['percent'] < 66 ? "text-warning" : (data['percent'] == 100 ? "text-success" : "")) }}">
                            <td>{{ domain }}</td>
                                <td>{{ data['total'] }}</td>
                                <td>{{ data['validated'] }}</td>
                                <td>{{ data['not-validated'] }}</td>
                                <td>{{ data['percent'] }}%</td>
                            </tr>
                        {% endfor %}
                    </table>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
